# Email (IMAP) Configuration
# These are typically provided by Proton Mail Bridge
IMAP_SERVER=localhost
IMAP_PORT=1143
EMAIL_USERNAME=your_email@protonmail.com
EMAIL_PASSWORD=your_bridge_password
IMAP_USE_SSL=False

# LLM API Configuration
LLM_API_ENDPOINT=http://localhost:8000/v1
LLM_API_KEY=
LLM_MODEL=default
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024
LLM_TIMEOUT=30

# Email Processing Configuration
BATCH_SIZE=10
MAX_EMAILS_PER_RUN=100
INCLUDE_ATTACHMENTS=False
MAX_EMAIL_SIZE_KB=500
FOLDERS_TO_PROCESS=INBOX
SKIP_PROCESSED=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=email_classifier.log
LOG_TO_CONSOLE=True
